<!-- item_border.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape>
            <solid android:color="#FFFFFF" /> <!-- Background color of the item -->
        </shape>
    </item>
    <item
        android:bottom="4dp"
        android:left="4dp"
        android:right="4dp"
        android:top="4dp">
        <shape>
            <solid android:color="@color/md_theme_dark_onBackground" /> <!-- Border color (change to your desired color) -->
            <corners android:radius="8dp" /> <!-- Set the corner radius to match the background -->
        </shape>
    </item>
</layer-list>
